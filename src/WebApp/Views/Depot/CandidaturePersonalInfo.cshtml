@model WebApp.Models.CandidaturePersonalInfoModel

<div class="mt-5 w-100 mb-5">

    <h1 class="mb-5">Candidature Personal Information</h1>

    <form asp-controller="Depot" asp-action="CandidaturePersonalInfo">
        <div asp-validation-summary="All" class="mb-3 row"></div>
        <div class="row">
            <div class="mb-3 col-5">
                <label asp-for="@Model.Nom" class="form-label"></label>
                <input class="form-control" asp-for="@Model.Nom">
                <span asp-validation-for="@Model.Nom" class="form-text"></span>
            </div>
            <div class="mb-3 col-5">
                <label asp-for="@Model.Prenom" class="form-label"></label>
                <input class="form-control" asp-for="@Model.Prenom">
                <span asp-validation-for="@Model.Prenom" class="form-text"></span>
            </div>
            <div class="mb-3 col-5">
                <label asp-for="@Model.Mail" class="form-label"></label>
                <input class="form-control" asp-for="@Model.Mail">
                <span asp-validation-for="@Model.Mail" class="form-text"></span>
            </div>
            <div class="mb-3 col-5">
                <label asp-for="@Model.Telephone" class="form-label"></label>
                <input class="form-control" asp-for="@Model.Telephone">
                <span asp-validation-for="@Model.Telephone" class="form-text"></span>
            </div>
            <div class="mb-3 col-5">
                <label asp-for="@Model.NiveauEtude" class="form-label"></label>
                <input class="form-control" asp-for="@Model.NiveauEtude">
                <span asp-validation-for="@Model.NiveauEtude" class="form-text"></span>
            </div>
            <div class="mb-3 col-5">
                <label asp-for="@Model.AnneeExperience" class="form-label"></label>
                <input class="form-control" asp-for="@Model.AnneeExperience">
                <span asp-validation-for="@Model.AnneeExperience" class="form-text"></span>
            </div>
            <div class="mb-4 col-5">
                <label asp-for="@Model.DernierEmployeur" class="form-label"></label>
                <input class="form-control" asp-for="@Model.DernierEmployeur">
                <span asp-validation-for="@Model.DernierEmployeur" class="form-text"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Suivant</button>
    </form>

</div>

@*Add JS Script*@
@section appScripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
}

